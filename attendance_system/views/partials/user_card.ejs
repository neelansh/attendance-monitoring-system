<!DOCTYPE html>
<% if(user != null && user.isTeacher){ %>
<div id="grad" class="container student-card card">
  <div class=" card-content row">
    <div class="col-sm-6">

      <% if(user != null && user.isDean){ %>
        <a href="/teacher/dean" class="logout btn waves-effect waves-light">DEAN PANEL</a>
      <% } %>
      <a href="/teacher/dashboard" class="logout btn waves-effect waves-light">DASHBOARD</a>
    </div>
    <div class="col-sm-6">
      <div clas="row">
        <div class="col-sm-8">
          <a href="/teacher/profile" class="logout btn waves-effect waves-light pull-right">MY ACCOUNT</a>
        </div>
        <div class="col-sm-4">
          <a href="/teacher/logout" class="logout btn waves-effect waves-light pull-right">LOG OUT</a>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <% if(user != null && user.instructor_id != null) {%>
      <div class='greeting'>HELLO</div>
      <div class="student-name details-field"><%=user.name%></div>
      <div class="student-enroll details-field"><%=user.instructor_id%></div>
      <% } %>
    </div>
    <div class="col-sm-6">
      <img src="/instructor_images/<%=user.school%>/<%-user.instructor_id%>.jpg" class="instructor_image">
      <div>
        <form action="/upload" method="post" enctype ="multipart/form-data">
            <div>
              <input type=file name="files">
            </div>
        </form>
      </div>
    </div>

  </div>
</div>
<style type="text/css">
  .parent-wrapper {
    height:100%;
  }
  .parent {
    display: flex;
    flex-wrap:wrap;
    margin:-10px 0 0 -10px;
  }
  .child {
    display: inline-block;
    /* margin: 10px 0 0 10px; */
    flex-grow: 1;
    width: calc(100% * (1/3) - 30px - 1px);
    margin: 1em 1em 1em 1em;
  }
  .subject-card .card-title{
    margin-left: 1em;
    margin-top: 0.5em;
    text-align: left;
    color: darkcyan;
    font-weight: 500;
    letter-spacing: 0.1em;
  }
  .subject-card .card-action{
    margin-right: 0em;
    display: flex;
    text-align: justify;
  }
  .subject-card .card-action a{
    flex: 1;
    margin-left: 1em;
    margin-right: 1em;
  }
  .card .card-action a:not(.btn):not(.btn-large):not(.btn-floating) {
    color: darkslategray;
    /* margin-right: 20px; */
    transition: color .3s ease;
    text-transform: uppercase;
    background: #0d47a1;
    padding: 0.5em;
    color: aliceblue;
    margin-right: 3em;
    /* font-weight: 500; */
    letter-spacing: 0.02em;
  }
  .card-title-custom span{
    flex: 1;
    font-size: 1.2em;
  }
  .card-title-custom{
    padding:0.5em;
    display: flex;
  }
  .sub-course{
    color: #0d47a1;
    font-weight: 500;
    letter-spacing: 0.1em;
  }
  .sub-stream{
    color: darkslategrey;
    font-weight: 500;
    letter-spacing: 0.1em;
  }
  .sub-code{
    color: #009688;
    font-weight: 500;
    letter-spacing: 0.1em;
  }
  @media(min-width: 992px){
    .instructor_image{
      border-radius: 60px;
      margin-top: 10px;
      width: 120px; height: 120px;
      border: 3px solid;
      border-color: #b6b5b5;
      position: absolute;
      right: 3%;
      top: 100%;
    }
  }
  @media (max-width: 767px) {
    .instructor_image{
      left: 50% !important;
      border-radius: 60px;
      margin-top: 10px;
      margin-left: 23%;
      width: 120px; height: 120px;
      border: 3px solid;
      border-color: #b6b5b5;
      right: 3%;
      top: 100%;
    }
    .logout {
      margin-top: 2px;
      margin-left: 20%;
      width: 60%;
    }
  }
</style>
<% } %>

<% if(user != null && user.isStudent){ %>
<div id="grad" class="container student-card card">
  <div class=" card-content row">
    <div class="col-md-4">
      <% if(user != null && user.enrollment_no != null) {%>
      <div class='greeting'>HELLO</div>
      <div class="student-name details-field"><%=user.name%></div>
      <div class="student-enroll details-field"><%=user.enrollment_no%></div>
      <% } %>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
      <a href="/student/dashboard" class="logout btn waves-effect waves-light">DASHBOARD</a>
      <a href="/student/logout" class="logout btn waves-effect waves-light">LOG OUT</a>
    </div>
  </div>
</div>

<style type="text/css">
  @media (min-width: 982px) {
    .logout {
      align-self: right;
      margin-left: 5px;
      width: 45%;
    }
  }
  @media (max-width: 767px) {
    .logout {
      margin-top: 2px;
      width: 60%;
    }
  }
</style>
<% } %>
