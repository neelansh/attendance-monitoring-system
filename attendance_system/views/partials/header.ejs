<body>
  <header>
    <nav>
     <div class="nav-wrapper container">
     <img class="left logo-img" height="100" style="position: relative !important;z-index: 10;" src='/images/logomain.png' />
       <a href="#" class="brand-logo center main-title">GURU GOBIND SINGH INDRAPRASTHA UNIVERSITY</a>
     </div>
   </nav>


   <nav>
    <div class="nav-wrapper sub-nav">
      <a href="/" class="brand-logo center sub-title">ATTENDANCE MONITORING SYSTEM</a>
    </div>
  </nav>
</header>
<main>
<% if(user != null && user.isTeacher){ %>
<div id="grad" class="container student-card card">
  <div class=" card-content row">

    <div class="col-md-4">
      <% if(user != null && user.instructor_id != null) {%>

      <div class='greeting'>HELLO</div>

      <div class="student-name details-field"><%=user.name%></div>

      <div class="student-enroll details-field"><%=user.instructor_id%></div>
      <% } %>
    </div>
    <div class="col-md-2">      
    </div>
    <div class="col-md-6" style="position: relative;">
      <a href="/teacher/dashboard" class="logout btn waves-effect waves-light">DASHBOARD</a>
      <a href="/teacher/profile" class="logout btn waves-effect waves-light">VIEW PROFILE</a>
      <a href="/teacher/logout" class="logout btn waves-effect waves-light right">LOG OUT </a>
      <img src="/instructor_images/<%=user.school%>/<%-user.instructor_id%>.jpg" style="border-radius: 60px; margin-top: 10px; width: 120px; height: 120px; border: 3px solid; border-color: #b6b5b5; position: absolute; right: 3%; top: 100%;">
    </div>
  </div>
</div>
<style type="text/css">
  .parent-wrapper {
    height:100%;
  }
  .parent {
    display: flex;
    flex-wrap:wrap;
    margin:-10px 0 0 -10px;
  }
  .child {
    display: inline-block;
    /* margin: 10px 0 0 10px; */
    flex-grow: 1;
    width: calc(100% * (1/3) - 30px - 1px);
    margin: 1em 1em 1em 1em;
  }
  .subject-card .card-title{
    margin-left: 1em;
    margin-top: 0.5em;
    text-align: left;
    color: darkcyan;
    font-weight: 500;
    letter-spacing: 0.1em;
  }
  .subject-card .card-action{
    margin-right: 0em;
    display: flex;
    text-align: justify;
  }
  .subject-card .card-action a{
    flex: 1;
    margin-left: 1em;
    margin-right: 1em;
  }
  .card .card-action a:not(.btn):not(.btn-large):not(.btn-floating) {
    color: darkslategray;
    /* margin-right: 20px; */
    transition: color .3s ease;
    text-transform: uppercase;
    background: #0d47a1;
    padding: 0.5em;
    color: aliceblue;
    margin-right: 3em;
    /* font-weight: 500; */
    letter-spacing: 0.02em;
  }

  .card-title-custom span{
    flex: 1;
    font-size: 1.2em;
  }
  .card-title-custom{
    padding:0.5em;
    display: flex;
  }
  .sub-course{
    color: #0d47a1;
    font-weight: 500;
    letter-spacing: 0.1em;
  }
  .sub-stream{
    color: darkslategrey;
    font-weight: 500;
    letter-spacing: 0.1em;
  }

  .sub-code{
    color: #009688;
    font-weight: 500;
    letter-spacing: 0.1em;
  }
</style>
<% } %>

<% if(user != null && user.isStudent){ %>
<div id="grad" class="container student-card card">
  <div class=" card-content row">
    <div class="col-md-4">
      <% if(user != null && user.enrollment_no != null) {%>
      <div class='greeting'>HELLO</div>
      <div class="student-name details-field"><%=user.name%></div>
      <div class="student-enroll details-field"><%=user.enrollment_no%></div>
      <% } %>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
      <a href="/student/dashboard" class="btn waves-effect waves-light">DASHBOARD </a>
      <a href="/student/logout" class="logout btn waves-effect waves-light right">LOG OUT </a>
    </div>
  </div>
</div>

<% } %>


  <div class="row">
    <% if(success_msg != "") {%>
    <div class="center-align card-panel green-text col s4 offset-s4"><%=success_msg%></div>
    <% } %>
    <% if(error_msg != "") {%>
    <div class="center-align card-panel red-text col s4 offset-s4"><%= error_msg %></div>
    <% } %>
    <% if(error != "") {%>
    <div class="center-align card-panel red-text col s4 offset-s4"><%= error %></div>
    <% } %>
    <% if(errors_validator) {%>
      <% for(var i=0 ; i<errors_validator.length ; ++i) {%>
        <div class="center-align card-panel red-text col s4 offset-s4"><%= errors_validator[i].msg %>, value: <%= errors_validator[i].value %></div>
      <% } %>
    <% } %>
  </div>

<style type="text/css">
   .logo-img {
        margin-top: 1em !important;
    }

</style>
