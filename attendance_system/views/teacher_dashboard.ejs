<!DOCTYPE html>
<% include partials/header %>


<div id="grad" class="container student-card card">
	<div class=" card-content row">

		<div class="col-md-4">
			<% if(user != null && user.instructor_id != null) {%>

			<div class='greeting'>HELLO</div>

			<div class="student-name details-field"><%=user.name%></div>

			<div class="student-enroll details-field"><%=user.instructor_id%></div>
			<% } %>
		</div>
		<div class="col-md-4">
		</div>
		<div class="col-md-4">
			<a href="/teacher/profile" class="logout btn waves-effect waves-light">VIEW PROFILE</a>
			<a href="/teacher/logout" class="logout btn waves-effect waves-light right">LOG OUT </a>
		</div>
	</div>
</div>
<br>
<div class="container parent-wrapper" style="text-align: center;">
	<div class="parent">
		<% for(var i=0; i<subjects.length ; ++i){ %>
		<div class="subject-card card card-small child">
			<div class="card-title-custom">
				<span class="sub-course"><%=subjects[i].course%></span>
				<span class="sub-stream"><%=subjects[i].stream%></span>

				<span class="sub-code"><%=subjects[i].subject_code%></span>
			</div>
			<div class="card-action">
				<a href="/teacher/attendance_marked/<%=subjects[i].batch_id%>/<%=subjects[i].subject_id%>/" class="btn waves-effect waves-light">View</a>
				<a href="/teacher/attendance/<%=subjects[i].batch_id%>/<%=subjects[i].subject_id%>/" class=" btn waves-effect waves-light">Mark</a>
			</div>
		</div>
		<% } %>
	</div>
</div>
<br>
<% include partials/footer %>

<style type="text/css">
	.parent-wrapper {
		height:100%;
	}
	.parent {
		display: flex;
		flex-wrap:wrap;
		margin:-10px 0 0 -10px;
	}
	.child {
		display: inline-block;
		/* margin: 10px 0 0 10px; */
		flex-grow: 1;
		width: calc(100% * (1/3) - 30px - 1px);
		margin: 1em 1em 1em 1em;
	}
	.subject-card .card-title{
		margin-left: 1em;
		margin-top: 0.5em;
		text-align: left;
		color: darkcyan;
		font-weight: 500;
		letter-spacing: 0.1em;
	}
	.subject-card .card-action{
		margin-right: 0em;
		display: flex;
		text-align: justify;
	}
	.subject-card .card-action a{
		flex: 1;
		margin-left: 1em;
		margin-right: 1em;
	}
	.card .card-action a:not(.btn):not(.btn-large):not(.btn-floating) {
		color: darkslategray;
		/* margin-right: 20px; */
		transition: color .3s ease;
		text-transform: uppercase;
		background: #0d47a1;
		padding: 0.5em;
		color: aliceblue;
		margin-right: 3em;
		/* font-weight: 500; */
		letter-spacing: 0.02em;
	}

	.card-title-custom span{
		flex: 1;
		font-size: 1.2em;
	}
	.card-title-custom{
		padding:0.5em;
		display: flex;
	}
	.sub-course{
		color: #0d47a1;
		font-weight: 500;
		letter-spacing: 0.1em;
	}
	.sub-stream{
		color: crimson;
		font-weight: 500;
		letter-spacing: 0.1em;
	}

	.sub-code{
		color: #009688;
		font-weight: 500;
		letter-spacing: 0.1em;
	}
</style>