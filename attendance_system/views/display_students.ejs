<!DOCTYPE html>

<% include partials/header %>
<div style="width:800px; margin:0 auto;">
  <h2>Attendance marked for the date: <%=date.getDate()%>/<%=date.getMonth()%>/<%=date.getFullYear()%></h2>
</div>
<div class="container" style="display: flex; justify-content: space-between;">
  <div>
    <h4>Students marked present are: </h4>
    
    <table>
     <tr>
      <th>Enrollment Number</th>
      <th>Attendance awarded</th>
    </tr>

    <% for (var i = 0; i < students_present.length ;i++) { %>
    <tr>
      <td><%= students_present[i] %></td>
      <td><%= attendanceAwarded %></td>
    </tr>    
    <% } %>
    </table>
  </div>
  <div>
    <h4>Students marked absent are: </h4>
    <table>
      <tr>
        <th>Enrollment Number</th>
        <th>Attendance awarded</th>
      </tr>
      <% for (var i = 0; i < students_absent.length ;i++) { %>
      <tr>
        <td><%= students_absent[i] %></td>
        <td><%= attendanceAwarded %></td>
      </tr>    
      <% } %>
    </table>
  </div>  
