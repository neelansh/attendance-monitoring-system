$(document).keydown(function(e){
    

    if (e.keyCode == 40) { //move left or wrap
         var next = $("li.current").next();
         $("li.current").removeClass("current"); 
         next.addClass("current");

      $('html, body').animate({
        scrollTop: $("li.current").prev().prev().prev().prev().prev().prev().prev().offset().top
    }, 0);
    }

    if (e.keyCode == 37) { //move left or wrap
        $("li.current").addClass("absent");
        var next = $("li.current").next();
        $("li.current").removeClass("current"); 
        next.addClass("current");
    }

    if (e.keyCode == 39) { //move left or wrap
        $("li.current").addClass("present");
        var next = $("li.current").next();
        $("li.current").removeClass("current"); 
        next.addClass("current");
    }

    if (e.keyCode == 38) { // move up
        var prev = $("li.current").prev();
         $("li.current").removeClass("current"); 
         prev.addClass("current");
         $('html, body').animate({
        scrollTop: $("li.current").offset().top
    }, 0);
    }

});

window.addEventListener("keydown", function(e) {
    // space and arrow keys
    if([32, 37, 38, 39, 40].indexOf(e.keyCode) > -1) {
        e.preventDefault();
    }
}, false);
</script>
<style type="text/css">
