<!DOCTYPE html>
<% include partials/header %>

<div class="container drop-down-school">
  <div class="row login-sel-cont">
    <div class="col-md-4 col-md-offset-4">
      <div class="card">
      <!-- <div class="row"> -->
        <div class="col-lg-12">
        </div>
       <!-- Card Content -->
       <div class="container-fluid custom-container">
         <div class="row custom-full-row">

           <div class="verticalLine">
               <div class="login-card-title">
                Update Information
             </div>
           </div>
         </div>
       </div>
     <form class="login-box-form" action="update_information?_method=PUT" method="POST">
        <div class="container-fluid">
          <div class="row">
            <div class="input-field col s12">
              <input name="designation" id="designation" type="text" class="validate" required>
              <label class="active" for="designation">Designation</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <input name="phone" id="phone" type="text" class="validate" required>
              <label class="active" for="phone">Mobile number</label>
            </div>
            <div class="input-field col s6">
              <input name="email" id="email" type="text" class="validate" required>
              <label class="active" for="email" data-error="wrong" data-success="rigt">Email</label>
            </div>
          </div>

          <button style="margin-bottom: 1em;" class="btn waves-effect waves-light right" type="submit" name="action">Update
           <i class="material-icons right">send</i>
         </button>
        </div>
     </form>


